{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
  "rewrites": [
      {
        "source": "/api/**",
        "run": {
          "serviceId": "chatieee-backend", 
          "region": "us-west1"
        }
      },
      {
        "source": "**",
        "function": "server"
      }
    ]
  }
}